# uploads/.htaccess
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|htm|html|shtml|sh|cgi)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# منع قائمة المجلدات
Options -Indexes

# السماح فقط بأنواع محددة
<FilesMatch "\.(jpg|jpeg|png|gif|pdf|webp|svg)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>
